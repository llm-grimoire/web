---
interface Props {
  owner: string;
  repo: string;
  name: string;
  description: string;
  topicCount: number;
}
const { owner, repo, name, description, topicCount } = Astro.props;
---
<a href={`/${owner}/${repo}/`} class="card-link">
  <article class="card">
    <h3>{name}</h3>
    <div class="owner">{owner}/{repo}</div>
    <p>{description}</p>
    <div class="meta">
      <span class="count">{topicCount} topics</span>
    </div>
  </article>
</a>

<style>
  .card-link { text-decoration: none; color: inherit; }
  .card-link:hover { text-decoration: none; }
</style>
