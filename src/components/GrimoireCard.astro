---
interface Props {
  grimoireName: string;
  github?: string;
  description: string;
  topicCount: number;
}
const { grimoireName, github, description, topicCount } = Astro.props;
---
<a href={`/${grimoireName}/`} class="card-link">
  <article class="card">
    <h3>{grimoireName}</h3>
    {github && <div class="owner">{github}</div>}
    <p>{description}</p>
    <div class="meta">
      <span class="count">{topicCount} topics</span>
    </div>
  </article>
</a>

<style>
  .card-link { text-decoration: none; color: inherit; }
  .card-link:hover { text-decoration: none; }
</style>
