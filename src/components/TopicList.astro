---
interface Topic {
  slug: string;
  title: string;
  description: string;
  order: number;
}

interface Props {
  owner: string;
  repo: string;
  topics: Topic[];
}

const { owner, repo, topics } = Astro.props;
const sorted = [...topics].sort((a, b) => a.order - b.order);
---
<ul class="topic-list">
  {sorted.map((t) => (
    <li>
      <a href={`/${owner}/${repo}/${t.slug}`}>
        <div class="topic-header">
          <div class="title">{t.title}</div>
          <code class="topic-cmd">npx @llm-grimoire/cli show {owner}/{repo} {t.slug}</code>
        </div>
        <div class="desc">{t.description}</div>
      </a>
    </li>
  ))}
</ul>
