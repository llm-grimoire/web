---
interface Topic {
  slug: string;
  title: string;
  description: string;
  order: number;
}

interface Props {
  grimoireName: string;
  topics: Topic[];
}

const { grimoireName, topics } = Astro.props;
const sorted = [...topics].sort((a, b) => a.order - b.order);
---
<ul class="topic-list">
  {sorted.map((t) => (
    <li>
      <a href={`/${grimoireName}/${t.slug}`}>
        <div class="topic-header">
          <div class="title">{t.title}</div>
          <code class="topic-cmd">grimoire show {grimoireName} {t.slug}</code>
        </div>
        <div class="desc">{t.description}</div>
      </a>
    </li>
  ))}
</ul>
